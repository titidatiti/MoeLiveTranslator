<Window x:Class="LiveTranslator.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Width="720" SizeToContent="Height"
    Background="#121212" Foreground="#E0E0E0"
    WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="WindowBgBrush" Color="#121212"/>
        <SolidColorBrush x:Key="ControlBgBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ControlBorderBrush" Color="#444444"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#39C5BB"/>
        <SolidColorBrush x:Key="MikuGreenBrush" Color="#39C5BB"/>

        <!-- Common Styles -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource ControlBgBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource ControlBgBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="checkBoxBorder" Width="18" Height="18" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="2" 
                                    Margin="0,0,8,0">
                                <Path x:Name="checkMark" 
                                      Data="M 3,8 L 6,11 L 13,3" 
                                      Stroke="{StaticResource AccentBrush}" 
                                      StrokeThickness="2" 
                                      Visibility="Collapsed" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center" RecognizesAccessKey="True"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dependent Resources for ComboBox (Must be defined BEFORE ComboBox Style) -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" 
                        Grid.ColumnSpan="2"
                        CornerRadius="2"
                        Background="{StaticResource ControlBgBrush}"
                        BorderBrush="{StaticResource ControlBorderBrush}"
                        BorderThickness="1" />
                <Border Grid.Column="0" CornerRadius="2,0,0,2"  Margin="1"  Background="{StaticResource ControlBgBrush}"  BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="0,0,1,0" />
                <Path x:Name="Arrow" Grid.Column="1" Fill="{StaticResource TextBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="{TemplateBinding Background}" />
        </ControlTemplate>

        <Style TargetType="ComboBox">
             <!-- Complete Dark Mode Template -->
             <Setter Property="Background" Value="{StaticResource ControlBgBrush}"/>
             <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
             <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}"/>
             <Setter Property="Padding" Value="6,3,5,3"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="Template">
                 <Setter.Value>
                     <ControlTemplate TargetType="ComboBox">
                         <Grid>
                             <ToggleButton Name="ToggleButton" 
                                           Template="{StaticResource ComboBoxToggleButton}" 
                                           Grid.Column="2" 
                                           Focusable="false"
                                           IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                           ClickMode="Press"/>
                             <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}"
                                               ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                               ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                               Margin="6,3,23,3"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left" />
                             <TextBox x:Name="PART_EditableTextBox"
                                      Style="{x:Null}" 
                                      Template="{StaticResource ComboBoxTextBox}" 
                                      HorizontalAlignment="Left" 
                                      VerticalAlignment="Center" 
                                      Margin="6,3,23,3"
                                      Focusable="True" 
                                      Background="Transparent"
                                      Foreground="{StaticResource TextBrush}"
                                      Visibility="Hidden"
                                      IsReadOnly="{TemplateBinding IsReadOnly}"/>
                             <Popup Name="Popup"
                                    Placement="Bottom"
                                    IsOpen="{TemplateBinding IsDropDownOpen}"
                                    AllowsTransparency="True" 
                                    Focusable="False"
                                    PopupAnimation="Slide">
                                 <Grid Name="DropDown"
                                       SnapsToDevicePixels="True"                
                                       MinWidth="{TemplateBinding ActualWidth}"
                                       MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                     <Border x:Name="DropDownBorder" Background="{StaticResource ControlBgBrush}"
                                             BorderThickness="1" BorderBrush="{StaticResource ControlBorderBrush}"/>
                                     <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                         <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                     </ScrollViewer>
                                 </Grid>
                             </Popup>
                         </Grid>
                         <ControlTemplate.Triggers>
                             <Trigger Property="HasItems" Value="false">
                                 <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                             </Trigger>
                             <Trigger Property="IsEnabled" Value="false">
                                 <Setter Property="Foreground" Value="#888888"/>
                             </Trigger>
                             <Trigger Property="IsGrouping" Value="true">
                                 <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                             </Trigger>
                             <Trigger Property="IsEditable" Value="true">
                                 <Setter Property="IsTabStop" Value="false"/>
                                 <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                 <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                             </Trigger>
                         </ControlTemplate.Triggers>
                     </ControlTemplate>
                 </Setter.Value>
             </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderThickness="0" Padding="5">
                             <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="#121212"/> 
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ControlBgBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
</Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Background="Transparent" BorderThickness="0" Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Margin="0,0,10,0" Padding="10,5">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBrush}" />
                                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#888888" />
                                    </Trigger>
                                     <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Tab 1: System Settings -->
            <TabItem Header="System">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                             <RowDefinition Height="Auto"/>
                             <RowDefinition Height="Auto"/>
                             <RowDefinition Height="Auto"/>
                             <RowDefinition Height="Auto"/> <!-- Google API (Collapsed) -->
                             <RowDefinition Height="Auto"/>
                             <RowDefinition Height="Auto"/> <!-- Noise Gate -->
                             <RowDefinition Height="Auto"/> <!-- Whisper Model -->
                             <RowDefinition Height="Auto"/> <!-- Prompts -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="Auto"/>
                             <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Input Device (Virtual Cable):" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Margin="5"
                                  ItemsSource="{Binding Devices}"
                                  SelectedIndex="{Binding SelectedDeviceIndex}"/>

                        <Label Content="Source Language (e.g., en-US):" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Margin="5" 
                                  ItemsSource="{Binding SupportedLanguages}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Code"
                                  SelectedValue="{Binding SourceLanguage}"
                                  IsEditable="True"/>

                        <Label Content="Target Language (e.g., zh-CN):" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" Margin="5" 
                                  ItemsSource="{Binding SupportedLanguages}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Code"
                                  SelectedValue="{Binding TargetLanguage}"
                                  IsEditable="True"/>

                        <Label Content="Google API Key:" Grid.Row="3" Grid.Column="0" Margin="0,5" Visibility="Collapsed"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Text="{Binding ApiKey}" Visibility="Collapsed"/>

                        <Label Content="Noise Gate % (Silence Threshold):" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
                        <Grid Grid.Row="5" Grid.Column="1" Margin="5">
                             <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="*"/>
                                 <ColumnDefinition Width="Auto"/>
                             </Grid.ColumnDefinitions>
                             <Slider Minimum="0" Maximum="100" Value="{Binding NoiseGateThreshold}" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                             <TextBlock Grid.Column="1" Text="{Binding NoiseGateThreshold}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </Grid>

                        <Label Content="Use Model (Whisper):" Grid.Row="6" Grid.Column="0" Margin="0,5"/>
                        <ComboBox Grid.Row="6" Grid.Column="1" Margin="5" ItemsSource="{Binding WhisperModels}" SelectedItem="{Binding SelectedWhisperModel}"/>

                        <Label Content="Whisper Prompts:" Grid.Row="7" Grid.Column="0" Margin="0,5"/>
                        <Button Content="Edit Configuration" Grid.Row="7" Grid.Column="1" Margin="5" Command="{Binding OpenPromptsConfigCommand}" ToolTip="Opens the JSON configuration file for System/User prompts and Hot Words."/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Tab 2: Appearance -->
            <TabItem Header="Appearance">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column: Main Window & Subtitle Box -->
                        <StackPanel Grid.Column="0">
                            <!-- Group 1: Main Window -->
                            <Label Content="Main Window" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Border BorderBrush="#333" BorderThickness="0,0,0,1" Margin="0,0,0,10"/>

                            <!-- Theme Color -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Theme Color:" VerticalAlignment="Center"/>
                                <DockPanel Grid.Column="1" LastChildFill="True">
                                    <Button DockPanel.Dock="Left" Width="30" Height="20" Margin="0,0,5,0" Command="{Binding PickThemeColorCommand}" Cursor="Hand" Style="{x:Null}" Padding="0" Background="Transparent" BorderThickness="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="3" BorderThickness="1" BorderBrush="#555" Background="{Binding ThemeBrush}" Width="30" Height="20"/>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBox Text="{Binding ThemeColor, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                </DockPanel>
                            </Grid>

                            <!-- Window Opacity -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Window Opacity:" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="0" Maximum="1" Value="{Binding WindowOpacity, UpdateSourceTrigger=PropertyChanged}" TickFrequency="0.05" IsSnapToTickEnabled="False" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding WindowOpacity, StringFormat=N2}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>

                            <!-- Group 2: Subtitle Box -->
                            <Label Content="Subtitle Box" FontWeight="Bold" Margin="0,15,0,5"/>
                            <Border BorderBrush="#333" BorderThickness="0,0,0,1" Margin="0,0,0,10"/>

                            <!-- Background Color -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Back Color:" VerticalAlignment="Center"/>
                                <DockPanel Grid.Column="1" LastChildFill="True">
                                    <Button DockPanel.Dock="Left" Width="30" Height="20" Margin="0,0,5,0" Command="{Binding PickSubtitleColorCommand}" Cursor="Hand" Style="{x:Null}" Padding="0" Background="Transparent" BorderThickness="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="3" BorderThickness="1" BorderBrush="#555" Background="{Binding SubtitleBackgroundBrush}" Width="30" Height="20"/>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBox Text="{Binding SubtitleBackgroundColor, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                </DockPanel>
                            </Grid>

                            <!-- Background Opacity -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Back Opacity:" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="0" Maximum="1" Value="{Binding SubtitleOpacity, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SubtitleOpacity, StringFormat=N2}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>

                            <!-- Line Spacing -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Line Spacing:" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="0" Maximum="50" Value="{Binding SubtitleSpacing, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SubtitleSpacing, StringFormat=N0}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>
                            <!-- Original Font Family -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Original Font Family:" VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="1" 
                                          ItemsSource="{Binding SystemFonts}" 
                                          SelectedItem="{Binding OriginalFontFamily}" 
                                          VerticalAlignment="Center">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontFamily="{Binding}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <CheckBox Grid.Column="2" Content="Bold" IsChecked="{Binding OriginalFontBold}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                            <!-- Translated Font Family -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Translated Font Family:" VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="1" 
                                          ItemsSource="{Binding SystemFonts}" 
                                          SelectedItem="{Binding TranslatedFontFamily}" 
                                          VerticalAlignment="Center">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontFamily="{Binding}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <CheckBox Grid.Column="2" Content="Bold" IsChecked="{Binding TranslatedFontBold}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>

                        <!-- Right Column: Subtitle Text -->
                        <StackPanel Grid.Column="2">
                            <!-- Group 3: Subtitle Text -->
                            <Label Content="Subtitle Text" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Border BorderBrush="#333" BorderThickness="0,0,0,1" Margin="0,0,0,10"/>

                            <!-- Font Sizes & Colors -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Original Size:" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="8" Maximum="72" Value="{Binding OriginalFontSize, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding OriginalFontSize, StringFormat=N0}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>

                            <!-- Original Text Color -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Original Color:" VerticalAlignment="Center"/>
                                <DockPanel Grid.Column="1" LastChildFill="True">
                                    <Button DockPanel.Dock="Left" Width="30" Height="20" Margin="0,0,5,0" Command="{Binding PickOriginalColorCommand}" Cursor="Hand" Style="{x:Null}" Padding="0" Background="Transparent" BorderThickness="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="3" BorderThickness="1" BorderBrush="#555" Background="{Binding OriginalTextBrush}" Width="30" Height="20"/>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBox Text="{Binding OriginalTextColor, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                </DockPanel>
                            </Grid>
                            
                            <!-- Separator -->
                             <Border BorderBrush="#333" BorderThickness="0,0,0,1" Margin="0,5,0,5"/>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Translated Size:" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="8" Maximum="72" Value="{Binding TranslatedFontSize, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TranslatedFontSize, StringFormat=N0}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>
                            
                            <!-- Translated Text Color -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Translated Color:" VerticalAlignment="Center"/>
                                <DockPanel Grid.Column="1" LastChildFill="True">
                                    <Button DockPanel.Dock="Left" Width="30" Height="20" Margin="0,0,5,0" Command="{Binding PickTranslatedTextColorCommand}" Cursor="Hand" Style="{x:Null}" Padding="0" Background="Transparent" BorderThickness="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="3" BorderThickness="1" BorderBrush="#555" Background="{Binding TranslatedTextBrush}" Width="30" Height="20"/>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBox Text="{Binding TranslatedTextColor, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                </DockPanel>
                            </Grid>
                             
                             <!-- Separator -->
                             <Border BorderBrush="#333" BorderThickness="0,0,0,1" Margin="0,5,0,5"/>

                            <!-- Shadow -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Shadow Color:" VerticalAlignment="Center"/>
                                <DockPanel Grid.Column="1" LastChildFill="True">
                                    <Button DockPanel.Dock="Left" Width="30" Height="20" Margin="0,0,5,0" Command="{Binding PickShadowColorCommand}" Cursor="Hand" Style="{x:Null}" Padding="0" Background="Transparent" BorderThickness="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="3" BorderThickness="1" BorderBrush="#555" Background="{Binding SubtitleShadowBrush}" Width="30" Height="20"/>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBox Text="{Binding SubtitleShadowColor, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                </DockPanel>
                            </Grid>
                            
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Shadow Blur:" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="0" Maximum="20" Value="{Binding SubtitleShadowBlur, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SubtitleShadowBlur, StringFormat=N1}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Shadow Dir:" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="0" Maximum="360" Value="{Binding SubtitleShadowDirection, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SubtitleShadowDirection, StringFormat=N0}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Shadow Depth:" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="0" Maximum="20" Value="{Binding SubtitleShadowDepth, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SubtitleShadowDepth, StringFormat=N1}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>

                            <!-- Stroke -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Stroke Color:" VerticalAlignment="Center"/>
                                <DockPanel Grid.Column="1" LastChildFill="True">
                                    <Button DockPanel.Dock="Left" Width="30" Height="20" Margin="0,0,5,0" Command="{Binding PickStrokeColorCommand}" Cursor="Hand" Style="{x:Null}" Padding="0" Background="Transparent" BorderThickness="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="3" BorderThickness="1" BorderBrush="#555" Background="{Binding SubtitleStrokeBrush}" Width="30" Height="20"/>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBox Text="{Binding SubtitleStrokeColor, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                </DockPanel>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Stroke Thickness:" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Minimum="0" Maximum="5" Value="{Binding SubtitleStrokeThickness, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SubtitleStrokeThickness, StringFormat=N1}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>

                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Tab 3: About -->
            <TabItem Header="About">
                <StackPanel Margin="20">
                    <TextBlock Text="MoeLiveTranslator" FontSize="20" FontWeight="Bold" Foreground="{StaticResource MikuGreenBrush}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Version 1.0.0" FontSize="12" Foreground="#888888" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Author: titidatiti" Margin="0,5"/>
                    <TextBlock Text="Design Philosophy: Simple, Fast, Moe." TextWrapping="Wrap" Margin="0,5" FontStyle="Italic" Foreground="#AAAAAA"/>
                    
                    <Separator Background="#333333" Margin="0,15"/>

                    <TextBlock Text="GitHub Repository:" Margin="0,5" FontWeight="SemiBold"/>
                    <TextBlock Text="https://github.com/titidatiti/MoeLiveTranslator" 
                               Foreground="{StaticResource MikuGreenBrush}" 
                               TextDecorations="Underline" 
                               Cursor="Hand" 
                               Margin="0,0,0,10">
                        <TextBlock.InputBindings>
                             <MouseBinding Gesture="LeftClick" Command="{Binding OpenGitHubCommand}"/>
                        </TextBlock.InputBindings>
                    </TextBlock>

                    <TextBlock Text="License: MIT License" Margin="0,5"/>
                    <TextBlock Text="This software is free and open source." FontSize="10" Foreground="#666666" Margin="0,2"/>
                </StackPanel>
            </TabItem>
        </TabControl>
        
        <!-- Bottom Action Buttons fixed at bottom of window -->
        <Border Grid.Row="1" BorderBrush="#333333" BorderThickness="0,1,0,0" Padding="15,10" Background="#181818">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="Restore Defaults" Command="{Binding RestoreDefaultsCommand}" Width="120" Height="28" Background="#444" Foreground="#CCC" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Foreground="#666666" FontSize="10" Margin="0,0,15,0" Text="Changes are applied on Save."/>
                    <Button Content="Save" Width="80" Height="28" Command="{Binding SaveCommand}" Margin="5,0"/>
                    <Button Content="Cancel" Width="80" Height="28" Command="{Binding CancelCommand}" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
