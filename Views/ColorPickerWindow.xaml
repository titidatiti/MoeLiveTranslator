<Window x:Class="LiveTranslator.Views.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Picker" Height="420" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="#FFF"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- Chrome Border -->
    <Border Background="#1E1E1E" CornerRadius="8" BorderBrush="#444" BorderThickness="1" Padding="20" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="10" Opacity="0.5" Direction="270"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Pick Color" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Col 0: SV Square -->
                    <ColumnDefinition Width="Auto"/> <!-- Col 1: Hue -->
                    <ColumnDefinition Width="*"/>    <!-- Col 2: Sliders, Hex, Preview, Palette -->
                </Grid.ColumnDefinitions>

                <!-- 1. Color Square (Saturation/Value) -->
                <Grid x:Name="ColorSquare" Grid.Column="0" Width="200" Height="200" Margin="0,0,12,0" 
                      VerticalAlignment="Top"
                      MouseDown="ColorSquare_MouseDown" MouseMove="ColorSquare_MouseMove" MouseUp="ColorSquare_MouseUp"
                      Background="Transparent">
                    <Rectangle Fill="{Binding HueBrush}" RadiusX="4" RadiusY="4"/>
                    <Rectangle RadiusX="4" RadiusY="4">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle RadiusX="4" RadiusY="4">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#00000000" Offset="0"/>
                                <GradientStop Color="#FF000000" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    
                    <!-- Pointer -->
                    <Canvas IsHitTestVisible="False">
                        <Ellipse Width="10" Height="10" Stroke="White" StrokeThickness="2" Margin="-5,-5">
                             <Ellipse.Effect>
                                 <DropShadowEffect BlurRadius="2" ShadowDepth="0" Color="Black"/>
                             </Ellipse.Effect>
                             <Canvas.Left>
                                 <Binding Path="PointerX"/>
                             </Canvas.Left>
                             <Canvas.Top>
                                 <Binding Path="PointerY"/>
                             </Canvas.Top>
                        </Ellipse>
                    </Canvas>
                </Grid>

                <!-- 2. Hue Slider (Vertical) -->
                <Grid Grid.Column="1" Width="36" Height="200" Margin="0,0,20,0" VerticalAlignment="Top"
                      Background="Transparent"
                      PreviewMouseLeftButtonDown="HueSlider_PreviewMouseLeftButtonDown"
                      PreviewMouseLeftButtonUp="HueSlider_MouseUp"
                      MouseMove="HueSlider_MouseMove">
                    <Border Width="24" HorizontalAlignment="Center" CornerRadius="3" ClipToBounds="True">
                        <Rectangle x:Name="HueBackground">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FF0000" Offset="0"/>
                                    <GradientStop Color="#FFFF00" Offset="0.167"/>
                                    <GradientStop Color="#00FF00" Offset="0.333"/>
                                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                                    <GradientStop Color="#0000FF" Offset="0.667"/>
                                    <GradientStop Color="#FF00FF" Offset="0.833"/>
                                    <GradientStop Color="#FF0000" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Border>
                    <Slider x:Name="HueSlider" Orientation="Vertical" Minimum="0" Maximum="360" Value="{Binding H, Mode=TwoWay}" 
                            IsDirectionReversed="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            IsHitTestVisible="False">
                        <Slider.Style>
                            <Style TargetType="Slider">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Track x:Name="PART_Track">
                                                    <Track.Thumb>
                                                        <Thumb Width="30" Height="8">
                                                            <Thumb.Template>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Border BorderBrush="White" BorderThickness="2" CornerRadius="2" Background="Transparent"/>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Slider.Style>
                    </Slider>
                </Grid>

                <!-- 3. Right Stack: Numeric, Hex, Preview, Palette -->
                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                    <!-- RGBA Sliders -->
                    <Grid Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- A -->
                        <Grid Grid.Row="0" Margin="0,2" Visibility="{Binding AlphaVisibility}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="A" FontSize="11" Opacity="0.7"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding A, Mode=TwoWay}" Interval="1" IsSnapToTickEnabled="True" Margin="5,0"/>
                            <TextBox Grid.Column="2" Text="{Binding A, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Height="22"/>
                        </Grid>

                        <!-- R -->
                        <Grid Grid.Row="1" Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="R" FontSize="11" Opacity="0.7"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding R, Mode=TwoWay}" Interval="1" IsSnapToTickEnabled="True" Margin="5,0"/>
                            <TextBox Grid.Column="2" Text="{Binding R, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Height="22"/>
                        </Grid>

                        <!-- G -->
                        <Grid Grid.Row="2" Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="G" FontSize="11" Opacity="0.7"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding G, Mode=TwoWay}" Interval="1" IsSnapToTickEnabled="True" Margin="5,0"/>
                            <TextBox Grid.Column="2" Text="{Binding G, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Height="22"/>
                        </Grid>

                        <!-- B -->
                        <Grid Grid.Row="3" Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="B" FontSize="11" Opacity="0.7"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="255" Value="{Binding B, Mode=TwoWay}" Interval="1" IsSnapToTickEnabled="True" Margin="5,0"/>
                            <TextBox Grid.Column="2" Text="{Binding B, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Height="22"/>
                        </Grid>
                    </Grid>

                    <!-- Hex & Preview -->
                    <Grid Height="32" Margin="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="#" VerticalAlignment="Center" Margin="0,0,5,0" Opacity="0.5"/>
                        <TextBox Grid.Column="1" Text="{Binding HexCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        
                        <!-- Mini Preview -->
                        <Border Grid.Column="2" CornerRadius="3" BorderBrush="#555" BorderThickness="1" ClipToBounds="True" Height="28" VerticalAlignment="Center">
                             <Rectangle Fill="{Binding CurrentBrush}"/>
                        </Border>
                    </Grid>

                    <!-- Palette -->
                    <TextBlock Text="Palette" Margin="0,5,0,5" Foreground="#666" FontSize="10"/>
                    <ItemsControl ItemsSource="{Binding PaletteColors}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="8"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Width="18" Height="18" Margin="1" BorderThickness="0" Background="{Binding Brush}" ToolTip="{Binding Hex}" Click="PaletteButton_Click">
                                    <Button.Template>
                                         <ControlTemplate TargetType="Button">
                                             <Border Background="{TemplateBinding Background}" BorderBrush="#444" BorderThickness="1" CornerRadius="2"/>
                                         </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>

            <!-- Bottom Buttons -->
            <Border Grid.Row="2" BorderBrush="#333" BorderThickness="0,1,0,0" Margin="-20,20,-20,-20" Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Confirm" IsDefault="True" Click="OkButton_Click" Width="90" Height="32" Margin="0,0,12,0" Background="#39C5BB" Foreground="#121212" FontWeight="SemiBold" BorderThickness="0">
                        <Button.Template>
                             <ControlTemplate TargetType="Button">
                                 <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                     <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                 </Border>
                             </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="Cancel" IsCancel="True" Width="90" Height="32" Background="#333" Foreground="#E0E0E0" BorderThickness="0">
                        <Button.Template>
                             <ControlTemplate TargetType="Button">
                                 <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                     <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                 </Border>
                             </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
